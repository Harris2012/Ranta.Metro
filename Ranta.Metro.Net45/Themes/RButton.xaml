<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Ranta.Metro.Controls"
    xmlns:converters="clr-namespace:Ranta.Metro.Converters">

    <Style TargetType="{x:Type controls:RButton}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border BorderBrush="LightBlue" Background="White" BorderThickness="2">
                        <ContentControl Content="{TemplateBinding Content}"></ContentControl>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
